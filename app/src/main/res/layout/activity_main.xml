<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <Button
        android:id="@+id/btnHabitaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habitaciones"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnInterfaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interfaz"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnExtintores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extintores"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnBorrarReportes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrar Reportes"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnSimular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simular"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:layout_marginTop="8dp"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:orientation="vertical">

        <!-- El resto de tus vistas (botones, textos, etc.) -->

    </LinearLayout>

</LinearLayout>